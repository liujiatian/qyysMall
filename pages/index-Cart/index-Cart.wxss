/* pages/index-Cart/index-Cart.wxss */
.compile{
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 28rpx;
  height: 80rpx;
  position: relative;
}
.compileText{
  float: right;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  color: #666;
}
.compileSite{
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 200rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding-left: 60rpx;
  color: #999;
  font-size: 24rpx;
}
.compileSite image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}
.operation{
  border-top: 1rpx solid #e5e5e5;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  box-sizing: border-box;
}
.operationView{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  overflow: hidden
}
.operationBtn{
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  line-height: 120rpx;
  text-align: center;
  width: 250rpx;
  background-color: #fa4f52;
  font-size: 28rpx;
  color: #fff;
}
.checkAll{
  position: absolute;
  top: 0;
  left: 0;
  width: 150rpx;
  font-size: 28rpx;
  height: 100%;
  line-height: 110rpx;
  text-align: center;
  color: #666;
}
.checkAll label{
  display: block;
  width: 100%;
  height: 100%;
}
.checkAll checkbox,.goodsLabel checkbox{
  transform:scale(.7);
}
.total{
  position: absolute;
  right: 250rpx;
  top: 0;
  height: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: right;
  padding: 20rpx 10rpx;
}
.total text{
  display: block;
  color: #fa4f52;
}
.ShowCart{
  position: absolute;
  top: 82rpx;
  bottom: 120rpx;
  left: 0;
  right: 0;
  background-color: #f8f8f8;
}
.anonymous{
  width: 300rpx;
  height: 400rpx;
  position: absolute;
  margin-top: -200rpx;
  margin-left: -150rpx;
  top: 50%;
  left: 50%;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}
.anonymous image{
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
  display: block;
}
.anonymous text{
  margin-top: 20rpx;
}
.goods{
  font-size:28rpx;
  background-color: #fff;
}
.goodsView{
  position:relative;
  border-bottom:1rpx solid #e5e5e5;
  padding: 5rpx 0;
  height:160rpx;
}
.goods:last-child{
  border-bottom:none;
}
.goodsImg{
  position:absolute;
  width:140rpx;
  height:140rpx;
  top:10rpx;
  left:80rpx;
  box-sizing:border-box;
  border:1rpx solid #e5e5e5;
}
.goodsImg image{
  height: 100%;
  width: 100%;
}
.goodsData{
  margin-left:250rpx;
  height:calc(100% - 10rpx);
  position:relative;
}
.goodsName{
  color:#666;
  margin-top:5px;
  padding-right:10rpx;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
}
.productSpecName{
  font-size:22rpx;
  color:#999;
}
.goodsPrice{
  position:absolute;
  bottom:10rpx;
  color:#fa4f52;
}
.goodsLabel{
  display: block;
  height: 100%;
  width: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  line-height: 160rpx;
}
.goodsNum{
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;
  border: 1rpx solid #e5e5e5;
}
.goodsNum view{
  display: inline-block;
  -webkit-box-orient:vertical;
  min-width: 60rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}
.goodsNumNumber{
  border-left: 1rpx solid #e5e5e5;
  border-right: 1rpx solid #e5e5e5;
}
.operationBtn text{
  font-size: 18rpx;
}
.complimentary{
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 22rpx;
  color: #999;
  padding: 10rpx 30rpx 15rpx 30rpx;
}
.complimentary text{
  color: #fa4f52;
  display: inline-block;
  border: 1rpx solid #fa4f52;
  padding: 3rpx 5rpx;
  border-radius: 5rpx;
}